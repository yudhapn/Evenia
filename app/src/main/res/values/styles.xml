<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="CustomSplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- below one -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>

    <style name="CardCutBottom" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/MyCardCutBottomAppearance</item>
    </style>
    <style name="MyCardCutBottomAppearance">
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeTopRight">14dp</item>
        <item name="cornerSizeBottomLeft">7dp</item>
        <item name="cornerSizeBottomRight">7dp</item>
    </style>

    <style name="CardCutTop" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/MyCardCutTopAppearance</item>
    </style>
    <style name="MyCardCutTopAppearance">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopLeft">7dp</item>
        <item name="cornerSizeTopRight">7dp</item>
        <item name="cornerSizeBottomLeft">14dp</item>
        <item name="cornerSizeBottomRight">14dp</item>
    </style>

</resources>
